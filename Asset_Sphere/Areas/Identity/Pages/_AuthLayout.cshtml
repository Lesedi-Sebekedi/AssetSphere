@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<body style="background-image: url(/images/green_and_white_squares_geometric_shapes_4k_hd_abstract.jpg); background-repeat:no-repeat; background-size:100% 100%">
    <div class="row justify-content-center">
        <div class="col-5 mt-5">
            <div class="card login-logout-card border-dark rounded-">
                <div class="card-header">
                    <ul class="nav nav-tabs card-header-tabs">
                        <li class="nav-item">
                            <a class="nav-link" href="Login">Log In</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="Register">Register</a>
                        </li>
                    </ul>

                </div>
                <div class="card-body">
                    <div class="row justify-content-center">
                        <div class="col-10 my-4">
                            @RenderBody()
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        @await RenderSectionAsync("Scripts", required: false)
        <script>
            $(function () {
                const currentPage = location.pathname;
                $('.nav-tabs li a').each(function () {
                    const $this = $(this);
                    if (currentPage.toLowerCase().indexOf($this.attr('href').toLowerCase()) != -1 {
                        $this.addClass('active');
                    }
                })
            })

        </script>
    }
</body>

                   